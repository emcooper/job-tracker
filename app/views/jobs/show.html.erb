<h3><%= @job.title %></h3>
<br>
Description: <%= @job.description %>
<br>

Level of Interest: <%= @job.level_of_interest %>
<br>

City: <%= @job.city %>
<br>

Company: <%= link_to @job.company.name, company_path(@job.company) %><br>

Category: <%= link_to @job.category.title, category_path(@job.category) %>
<br><br>

<%= link_to "Edit", edit_company_job_path(@job.company, @job), :class => "btn btn-default edit" %>

<%= link_to "Delete", company_job_path(@job.company, @job), method: :delete, :class => "btn btn-default" %><br>
<br><br>
<div class = "list_group" id = "comments">
  <li class="list-group-item list-group-item-info">Comments</li>
  <% @job.comments.order("created_at").each do |comment| %>
    <li class="list-group-item "><%= comment.content %></li>
  <% end %>
</div>
<%= form_for [@company, @job, @comment] do |f| %>
<%= f.label :comment %>
<%= f.text_field :content %>
<%= f.submit :class => "btn btn-default edit" %>
<% end %>
