<%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :category %>
  <!-- <%= select_tag(:category_id, options_for_select(Category.titles)) %> -->
  <%= collection_select(:job, :category_id, Category.all, :id, :title, :prompt => 'Please select category') %>

  <%= f.submit :class => "btn btn-default" %>
<% end %>
